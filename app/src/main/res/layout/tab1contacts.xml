<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.morasclass.mora.hiitblast.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/videoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:text="Video"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <VideoView
                android:id="@+id/videoView5"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_column="0"
                android:layout_row="1" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:fontFamily="sans-serif"
                android:text="Squats"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:layout_row="3"
                android:fontFamily="serif"
                android:lineSpacingExtra="1sp"
                android:scrollbars="vertical"
                android:text="Squats are a compund joint exercise. The primary muscle groups that squats target are Hamstrings, Quadriceps, Glutes, and your Lower Back. Squats are also a great fat burning exercise since squating is a a multi-joint movement, activating more muscles, and burning more fat"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Start!"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_margin="0dp"/>

            <TextView
                android:id = "@+id/timerTitle"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:text="WorkOut!"
                android:layout_row="4"
                android:layout_column="0"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                />

            <TextView
                android:id = "@+id/textClockView"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:text="0:00:00"
                android:layout_row="5"
                android:layout_column="0"
                android:textAlignment="center"
                android:textSize="60dp"
                />



        </GridLayout>
    </ScrollView>

</RelativeLayout>
